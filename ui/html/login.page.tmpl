<div>
  <form action='/login' method='POST' novalidate>
    {{with .Form}}
    <div>
      <label>Email:</label>
      {{with .Errors.Get "email"}}
      <label class='error'>{{.}}</label>
      {{end}}
      <input type='email' name='email' value='{{.Get "email"}}'>
    </div>
    <div>
      <label>Password:</label>
      {{with .Errors.Get "password"}}
      <label class='error'>{{.}}</label>
      {{end}}
      <input type='password' name='password'>
    </div>
    <div>
      {{with .Errors.Get "generic"}}
      <label class='error'>{{.}}</label>
      {{end}}
      <input type='submit' value='Login'>
    </div>
    <div>
      <input type='submit' value='Login'>
      <a href='/auth/google'><button type='button'>Login with Google</button></a>
    </div>
    <div>
      <input type='submit' value='Go to Signup'>
      <a href='/'><button type='button'>Go to Signup</button></a>
    </div>
    {{end}}
  </form>
</div>

<style>
  label {
    display: block;
    margin-bottom: 0.5em;
  }

  input[type="email"],
  input[type="password"],
  input[type="submit"] {
    display: block;
    margin-bottom: 1em;
  }

  .error {
    color: red;
    font-style: italic;
    font-size: 0.8em;
  }
</style>